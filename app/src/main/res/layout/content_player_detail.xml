<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="16dp"
    android:paddingBottom="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <LinearLayout
            android:id="@+id/container_playerdetail_weight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/weight"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/textview_playerdetail_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="48sp"
                android:textColor="@color/colorPrimaryDark"
                tools:text="65.76"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/container_playerdetail_height"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/height"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/textview_playerdetail_height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="48sp"
                android:textColor="@color/colorPrimaryDark"
                tools:text="1.68"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/textview_playerdetail_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="18sp"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="12dp"
        tools:text="Forward"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/textview_playerdetail_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_marginTop="16dp"
        android:lineSpacingMultiplier="1.5"
        tools:text="Lorem ipsum dolor sit amet constecteur adispicing elit. Lorem ipsum dolor sit amet."/>

</LinearLayout>